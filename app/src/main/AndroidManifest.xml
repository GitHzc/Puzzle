<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.puzzle">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".PuzzleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainPageActivity" />
        <activity android:name=".activity.GameStartActivity" />
        <activity android:name=".activity.ClipPictureActivity"/>
        <activity android:name=".activity.GameActivity"/>
        <activity android:name=".activity.Rank" />
        <activity android:name=".activity.User" />
        <activity android:name=".activity.History"/>
        <service android:name=".bgm.MusicServer"/>
    </application>

</manifest>