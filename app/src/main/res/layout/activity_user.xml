<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191D29"
    android:orientation="vertical"
    tools:context=".activity.User">
    <LinearLayout
        android:id="@+id/back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginHorizontal="10dp">
        <ImageButton
            android:id="@+id/user_back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/back"
            android:background="#191D29"
            android:padding="6dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:padding="30dp"
        android:background="@drawable/user_border">
        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textAlignment="viewStart"
            android:textSize="20dp"
            android:text="Username"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:layout_centerVertical="true"
            android:background="@color/blue"></View>
        <TextView
            android:id="@+id/user_rank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textAlignment="viewEnd"
            android:textSize="20dp"
            android:text="世界排名：Unknown"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="50dp">
        <Button
            android:id="@+id/user_history_button"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_margin="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_purple_25"
            android:text="历史战绩"
            android:textColor="@color/purple"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/user_logout_button"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_margin="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_blue_25"
            android:text="退出"
            android:textColor="@color/blue"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>